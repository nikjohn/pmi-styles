mixin image(config)
  - var _config = config || {}
  - var _id = config.id || ''
  - var _classes = config.classes || ''
  - var _src = config.src || '#'
  - var _alt = config.alt || 'Alternate text'
  - var _width = config.width || ''
  - var _height = config.height || ''

  img(
    id=_id,
    class=_classes,
    src=_src,
    alt=_alt,
    width=_width,
    height=_height
  )

